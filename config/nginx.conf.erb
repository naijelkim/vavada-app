worker_processes 1;
daemon off;

events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile on;
  tcp_nopush on;
  gzip on;

  server {
    listen <%= ENV["PORT"] %>;
    root /app;           # если сайт лежит в корне репозитория
    index index.html;

    # раздача статики и SPA-фоллбек на index.html
    location / {
      try_files $uri /index.html;
    }
  }
}
