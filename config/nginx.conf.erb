worker_processes 1;
daemon off;

events { worker_connections 1024; }

http {
  # абсолютный путь к mime.types
  include       /app/config/mime.types;
  default_type  application/octet-stream;

  # логи в stdout/stderr (видно в heroku logs)
  access_log /dev/stdout;
  error_log  /dev/stderr;

  sendfile on;
  tcp_nopush on;
  gzip on;

  server {
    listen <%= ENV["PORT"] %>;
    server_tokens off;

    # index.html у тебя в корне репозитория:
    root /app;                 # если файлы в /public — поставь /app/public
    index index.html;

    location / {
      try_files $uri $uri/ /index.html;
    }
  }
}
